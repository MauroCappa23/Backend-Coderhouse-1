<header>
    <h1>Home - Real Time Products</h1>
</header>

<main>
    <section>
        <h3>Products</h3>
        <div>
            <ul id="product-list"></ul>
        </div>
    </section>

    <section>
        <h3>Form of Products</h3>
        <form id="product-form">
            <input type="text" name="title" placeholder="Add product name">
            <div>Is active? <input type="checkbox" name="status"></div>
            <input type="number" name="stock" placeholder="Add stock"><br>
            <input type="text" name="code" placeholder="Add code"><br>
            <input type="description" name="description" placeholder="Add description"><br>
            <input type="number" name="price" placeholder="Add price"><br>

            <input type="submit" value="Save">
        </form>
    </section>

    <section>
        <h3>Delete Products</h3>
        <div>
            <input type="number" id="product-id">
            <button id="btn-delete-product">Delete</button>
        </div>
    </section>

    <p id="error-message" style="color: red;"></p>
</main>

<script src="/socket.io/socket.io.js"></script>
<script src="/api/public/js/products.socket.js"></script>